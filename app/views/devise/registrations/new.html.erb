
<div class="page">
  <!-- <h3>Sign up</h3> -->

  <div class="signupForm">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%#= devise_error_messages! %>

      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'test' %>
      </div>
      <br>
      <div class="field">
        <%= f.label :fname %><br />
        <%= f.text_field :fname, autofocus: true, autocomplete: "First Name", class: 'test' %>
      </div>
      <br>
      <div class="field">
        <%= f.label :lname %><br />
        <%= f.text_field :lname, autofocus: true, autocomplete: "Last Name", class: 'test' %>
      </div>
      <br>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'test' %>
      </div>
      <br>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'test' %>
      </div>
      <br>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'test' %>
      </div>
      <br>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>
